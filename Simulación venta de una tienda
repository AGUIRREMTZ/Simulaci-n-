import random

# Par치metros de simulaci칩n
dias = 7                     # Simular 1 semana
precio_articulo = 50         # Precio por art칤culo
clientes_min = 5             # M칤nimo de clientes por d칤a
clientes_max = 15            # M치ximo de clientes por d칤a
articulos_min = 1            # M칤nimo de art칤culos por cliente
articulos_max = 5            # M치ximo de art칤culos por cliente

# Variables
ventas_totales = 0
cliente_top = {"dia": 0, "cliente": 0, "gasto": 0}

print("D칤a | Cliente | Art칤culos comprados | Gasto | Ventas acumuladas")

for dia in range(1, dias + 1):
    clientes = random.randint(clientes_min, clientes_max)
    for cliente in range(1, clientes + 1):
        articulos = random.randint(articulos_min, articulos_max)
        gasto = articulos * precio_articulo
        ventas_totales += gasto
        
        # Verificar si este cliente es el que m치s gast칩
        if gasto > cliente_top["gasto"]:
            cliente_top = {"dia": dia, "cliente": cliente, "gasto": gasto}
        
        print(f"{dia:^3} | {cliente:^7} | {articulos:^19} | {gasto:^5} | {ventas_totales:^17}")

# Resultados finales
print("\n游늵 Resultados finales:")
print("Ventas totales en la semana:", ventas_totales)
print(f"Cliente que m치s gast칩: D칤a {cliente_top['dia']} - Cliente {cliente_top['cliente']} con gasto de {cliente_top['gasto']}")
