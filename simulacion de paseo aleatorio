  y -= step_zise
elif direction == 1
  y += step_zise
elif direction == 2
  x -= step_zise
elif direction == 3
  x += step_zise

if x < 0: x = 0
if x > WIDTH - step_size: x = WIDTH - step_size
if Y < 0: x = 0
if Y > HEIGTH - step_size: Y = HEIGHT - step_size

trail.append((x, y))
screen.fill(BLACK)

for pos in trail:
  pygame.draw.circle(screen, red, (x, y), 5)

pygame.display.flip()

time.sleep(0.01)

pygame.quit()
