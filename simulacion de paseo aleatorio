import pygame
import random
import time

pygame.init()

WIDTH, HEIGHT = 800, 600
screen =pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("paseo aleatorio")

WHITE = (255, 255, 255)
BLACK = (0, 0, 0)
RED = (255, 0, 0)

step_size = 10
trail = []

running = True

while running: 
  for event in pygame.event.get():
    if event.type == pygame.QUIT:
      running = False

direccion = random.randint(0, 3)

